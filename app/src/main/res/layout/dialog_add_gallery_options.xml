<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_20">

    <Button
        android:id="@+id/btn_add_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_from_gallery"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_add_from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_new_photo"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_from_gallery"/>

    <Button
        android:id="@+id/btn_add_from_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/input_photo_url"
        app:layout_constraintTop_toBottomOf="@+id/btn_add_from_camera"/>

</androidx.constraintlayout.widget.ConstraintLayout>